void edad(int age){
    if(age<=17)
        cout<<"Next year you'll be"<<age+1<<endl;
    else if(age>=18)
        cout<<"your are able to vote"<<endl;
    else
     cout<<"I hope you are  enjoying retirement";
    
}
void genero(string gender){
    if(gender=="M")
        cout<<"him";
    else
        cout<<"her";
		}
